import 'package:flutter/material.dart';
import 'dart:io';
import 'dart:convert';
import 'dart:typed_data';
import 'package:http/http.dart' as http;

import 'summary_screen.dart';

const String kAiEndpoint = String.fromEnvironment(
  'AI_ENDPOINT',
  defaultValue: 'http://127.0.0.1:8000/analyze',
);

class CameraScreen extends StatefulWidget {
  final String examId;
  final int age;
  final String gender;

  const CameraScreen({
    Key? key,
    required this.examId,
    required this.age,
    required this.gender,
  }) : super(key: key);

  @override
  State<CameraScreen> createState() => _CameraScreenState();
}

class _CameraScreenState extends State<CameraScreen> {
  bool _leftDone = false;
  bool _rightDone = false;
  bool _isCapturing = false;
  bool _ready = false;

  Uint8List? _leftBytes;
  Uint8List? _rightBytes;

  Future<void> _capture(String side) async {
    setState(() {
      _isCapturing = true;
    });

    final bytes = await _fakeCapture(side);

    setState(() {
      if (side == 'left') {
        _leftBytes = bytes;
        _leftDone = true;
      } else {
        _rightBytes = bytes;
        _rightDone = true;
      }
      _isCapturing = false;
      _ready = _leftDone && _rightDone;
    });
  }

  Future<Uint8List> _fakeCapture(String side) async {
    final fileName = side == 'left' ? 'L.jpg' : 'R.jpg';
    final file = File(fileName);
    if (!await file.exists()) {
      throw Exception('Тестовый файл $fileName не найден');
    }
    return file.readAsBytes();
  }

  Future<void> _analyze() async {
    if (!_ready) {
      return;
    }
    if (!mounted) {
      return;
    }

    final leftRes = await _callServer('left', _leftBytes!);
    final rightRes = await _callServer('right', _rightBytes!);

    final result = rightRes['status'] == 'waiting' ? leftRes : rightRes;

    if (!mounted) {
      return;
    }

    Navigator.pushReplacement(
      context,
      MaterialPageRoute(
        builder: (_) => SummaryScreen(
          examId: widget.examId,
          result: result,
        ),
      ),
    );
  }

  Future<Map<String, dynamic>> _callServer(String side, Uint8List bytes) async {
    final uri = Uri.parse(kAiEndpoint);

    final request = http.MultipartRequest('POST', uri);
    request.fields['exam_id'] = widget.examId;
    request.fields['age'] = widget.age.toString();
    request.fields['gender'] = widget.gender;
    request.fields['locale'] = 'ru';
    request.fields['task'] = 'Иридодиагностика';

    request.files.add(
      http.MultipartFile.fromBytes(
        side,
        bytes,
        filename: '$side.jpg',
      ),
    );

    final response = await request.send();
    final respStr = await response.stream.bytesToString();

    final Map<String, dynamic> data =
        jsonDecode(respStr) as Map<String, dynamic>;
    return data;
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Съёмка радужки (${widget.examId})'),
      ),
      body: SafeArea(
        child: Padding(
          padding: const EdgeInsets.all(16),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text('Возраст: ${widget.age}, пол: ${widget.gender}'),
              const SizedBox(height: 16),
              Row(
                mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                children: [
                  ElevatedButton(
                    onPressed: _isCapturing ? null : () => _capture('left'),
                    child: Text(_leftDone ? 'Левый ✓' : 'Снять левый'),
                  ),
                  ElevatedButton(
                    onPressed: _isCapturing ? null : () => _capture('right'),
                    child: Text(_rightDone ? 'Правый ✓' : 'Снять правый'),
                  ),
                ],
              ),
              const SizedBox(height: 24),
              ElevatedButton(
                onPressed: _ready && !_isCapturing ? _analyze : null,
                child: const Text('Отправить на анализ'),
              ),
              const SizedBox(height: 16),
              if (_isCapturing)
                const Center(
                  child: CircularProgressIndicator(),
                ),
            ],
          ),
        ),
      ),
    );
  }
}
